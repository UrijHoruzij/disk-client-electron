{
  "name": "disk-client",
  "description": "",
  "author": "Urij Horuzij",
  "build": {
    "appId": "com.urij.storage",
    "productName": "Storage",
    "icon": "./public/favicon.ico",
    "win":{
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^1.2.0",
    "formik": "^2.2.9",
    "node-sass": "^7.0.0",
    "normalize.css": "^8.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-window": "^1.8.8",
    "redux": "^4.0.5",
    "redux-thunk": "^2.4.2",
    "request-jwt": "^2.0.0",
    "slicer-file": "^2.0.0",
    "styled-components": "^5.2.1",
    "tinycolor2": "^1.4.2",
    "ui-nature": "^0.5.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "react-start": "cross-env PORT=3006 react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "win": "electron-builder --win",
    "linux": "electron-builder --linux",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3006 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^22.0.2",
    "electron-builder": "^22.9.1",
    "wait-on": "^7.0.1"
  }
}
